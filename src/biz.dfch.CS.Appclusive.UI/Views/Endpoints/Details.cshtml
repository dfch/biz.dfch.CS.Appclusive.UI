@model biz.dfch.CS.Appclusive.UI.Models.Diagnostics.Endpoint
@using biz.dfch.CS.Appclusive.UI.App_LocalResources
@{
    ViewBag.Title = @Model.GetType().Name + " details";
}
@section Title{
    <h2>@Html.DisplayFor(model => model.Name)</h2>
    <h4>@GeneralResources.ResourceManager.GetString(@Model.GetType().Name)</h4>
}
<div>
    <hr />
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#details">@GeneralResources.Details</a></li>
        <li><a data-toggle="tab" href="#general">@GeneralResources.General</a></li>
    </ul>
    <div class="tab-content">
        <div id="details" class="tab-pane fade in active">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Version)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Version)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.RoutePrefix)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.RoutePrefix)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.RouteTemplate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.RouteTemplate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ServerRole)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ServerRole)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Priority)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Priority)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Address)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>
        <div id="general" class="tab-pane fade">
            @Html.Partial("IAppcusiveEntityBaseDetails", Model)
        </div>
    </div>
    <hr />
</div>
<p>
    @Html.Partial("BackLink")
</p>
