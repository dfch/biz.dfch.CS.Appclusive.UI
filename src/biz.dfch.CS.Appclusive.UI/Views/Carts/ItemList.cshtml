@model IEnumerable<biz.dfch.CS.Appclusive.UI.Models.Core.CartItem>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

    @foreach (var cartItem in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modeItem => cartItem.Name)
            </td>
            <td>
                @Html.DisplayFor(modeItem => cartItem.Quantity)
            </td>
            <td class="ap-btn">
                <a class="btn btn-default btn-sm" href="@Url.Action("ItemDetails", new { id = cartItem.Id })"><i class="fa fa-cog"></i> Details</a>
                <a class="btn btn-default btn-sm disabled" href="@Url.Action("EditItem", new { id = cartItem.Id })"><i class="fa fa-cog"></i> Edit</a>
                <a class="btn btn-default btn-sm disabled" href="@Url.Action("DeleteItem", new { id = cartItem.Id })"><i class="fa fa-trash-o"></i> Delete</a>
            </td>
        </tr>
    }

</table>
         
