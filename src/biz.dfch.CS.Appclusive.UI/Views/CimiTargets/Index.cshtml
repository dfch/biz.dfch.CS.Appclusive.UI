@using biz.dfch.CS.Appclusive.UI.Helpers
@model IEnumerable<biz.dfch.CS.Appclusive.UI.Models.Cmp.CimiTarget>
@using biz.dfch.CS.Appclusive.UI.App_LocalResources

@{
    ViewBag.Title = "CimiTarget" + @GeneralResources.List;
}
@section Title{
    <h2>@GeneralResources.ResourceManager.GetString("CimiTarget")@GeneralResources.List</h2>
}
<div class="row">
    @Html.Partial("SearchForm")
</div>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameForSort(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameForSort(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameForSort(model => model.CimiId)
        </th>
        <th>
            @Html.DisplayNameForSort(model => model.CimiType)
        </th>
        <th>
            @Html.DisplayNameForSort(model => model.CatalogueItemId)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td onclick="window.location = '@Url.Action("Details", new { id = item.Id })'" class="ap-hand">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td onclick="window.location = '@Url.Action("Details", new { id = item.Id })'" class="ap-hand">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td onclick="window.location = '@Url.Action("Details", new { id = item.Id })'" class="ap-hand">
                @Html.DisplayFor(modelItem => item.CimiId)
            </td>
            <td onclick="window.location = '@Url.Action("Details", new { id = item.Id })'" class="ap-hand">
                @Html.DisplayFor(modelItem => item.CimiType)
            </td>
            <td onclick="window.location = '@Url.Action("Details", new { id = item.Id })'" class="ap-hand">
                @Html.DisplayFor(modelItem => item.CatalogueItemId)
            </td>
        </tr>
    }

</table>
