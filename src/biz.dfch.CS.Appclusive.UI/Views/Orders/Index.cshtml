@using biz.dfch.CS.Appclusive.UI.Helpers
@model IEnumerable<biz.dfch.CS.Appclusive.UI.Models.Core.Order>
@using biz.dfch.CS.Appclusive.UI.App_LocalResources
@{
    ViewBag.Title = "Order" + @GeneralResources.List;
}
@section Title{
    <h2>@GeneralResources.ResourceManager.GetString("Order")@GeneralResources.List</h2>
}
<div class="row">
    @Html.Partial("SearchForm")
</div>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameForSort(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Job)
        </th>
        <th>
            @Html.DisplayNameForSort(model => model.Created)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td onclick="window.location = '@Url.Action("Details", new { id = item.Id })'" class="ap-hand">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td onclick="window.location = '@Url.Action("Details", new { id = item.Id })'" class="ap-hand">
                @Html.DisplayFor(modelItem => item.Job)
            </td>
            <td onclick="window.location = '@Url.Action("Details", new { id = item.Id })'" class="ap-hand">
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td class="ap-btn text-nowrap">
                @Html.SecuredButton("Read", Url.Action("Details", new { id = item.Id }))
                @Html.SecuredButton("Delete", Url.Action("Delete", new { id = item.Id }))
            </td>
        </tr>
    }

</table>
