@model IEnumerable<biz.dfch.CS.Appclusive.UI.Models.Core.OrderItem>
@using biz.dfch.CS.Appclusive.UI.App_LocalResources
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var orderItem in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modeItem => orderItem.Name)
            </td>
            <td>
                @Html.DisplayFor(modeItem => orderItem.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modeItem => orderItem.Type)
            </td>
            <td>
                @Html.DisplayFor(modeItem => orderItem.Description)
            </td>
            <td class="ap-btn">
                <a class="btn btn-primary btn-sm" href="@Url.Action("ItemDetails", new { id = orderItem.Id })"><i class="fa fa-cog"></i> @GeneralResources.DetailsLink</a>
                <a class="btn btn-default btn-sm" href="@Url.Action("ItemDelete", new { id = orderItem.Id })" onclick="return confirm('@GeneralResources.ConfirmDelete')" title="Delete" data-toggle="tooltip"><i class="fa fa-trash-o"></i></a>
            </td>
        </tr>
    }

</table>
         
