@using biz.dfch.CS.Appclusive.UI.App_LocalResources
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Title{
    <h2>@GeneralResources.ResourceManager.GetString("AuditTrail")@GeneralResources.List</h2>
}
<ul>
    <table class="table table-striped table-hover">
        <caption>This table shows all modifications to the underlying entities</caption>
        <thead>
            <tr>
                <th>EntityId</th>
                <th>EntityType</th>
                <th>EntityState</th>
                <th>Created</th>
                <th>Modified</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var auditTail in ViewBag.AuditTrails)
            {
                <tr class="@("Added" == auditTail.EntityState ? "success" : ("Deleted" == auditTail.EntityState ? "danger" : string.Empty))">
                    <td>@auditTail.EntityId</td>
                    <td>@auditTail.EntityType</td>
                    <td>@auditTail.EntityState</td>
                    <td>@auditTail.Created</td>
                    <td>@auditTail.Modified</td>
                </tr>
            }
        </tbody>
    </table>
</ul>
