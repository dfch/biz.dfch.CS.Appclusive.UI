@using biz.dfch.CS.Appclusive.UI.Helpers
@model IEnumerable<biz.dfch.CS.Appclusive.UI.Models.Core.User>
@using biz.dfch.CS.Appclusive.UI.App_LocalResources
@{
    ViewBag.Title = "User" + " list";
}
@section Title{
    <h2>@GeneralResources.ResourceManager.GetString("User")@GeneralResources.List</h2>
}
<div class="row">
    <div class="col-md-2">
        @Html.SecuredButton("Create", Url.Action("Create"))
    </div>
    @Html.Partial("SearchForm")
</div>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameForSort(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameForSort(model => model.Mail)
        </th>
        <th>
            @Html.DisplayNameForSort(model => model.ExternalId)
        </th>
        <th>
            @Html.DisplayNameForSort(model => model.ExternalType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td onclick="window.location = '@Url.Action("Details", new { id = item.Id })'" class="ap-hand">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td onclick="window.location = '@Url.Action("Details", new { id = item.Id })'" class="ap-hand">
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td onclick="window.location = '@Url.Action("Details", new { id = item.Id })'" class="ap-hand">
                @Html.DisplayFor(modelItem => item.ExternalId)
            </td>
            <td onclick="window.location = '@Url.Action("Details", new { id = item.Id })'" class="ap-hand">
                @Html.DisplayFor(modelItem => item.ExternalType)
            </td>
            <td class="ap-btn text-nowrap">
                @Html.SecuredButton("Update", Url.Action("Edit", new { id = item.Id }))
                @Html.SecuredButton("Read", Url.Action("Details", new { id = item.Id }))
                @Html.SecuredButton("Delete", Url.Action("Delete", new { id = item.Id }))
            </td>
        </tr>
    }

</table>
