@model IEnumerable<biz.dfch.CS.Appclusive.UI.Models.Core.Ace>
@using biz.dfch.CS.Appclusive.UI.Helpers
@using biz.dfch.CS.Appclusive.UI.App_LocalResources
@{
    ViewBag.Title = "Ace" + @GeneralResources.List;
}

@section Title{
    <h2>@GeneralResources.ResourceManager.GetString("Ace")@GeneralResources.List</h2>
}

<div class="row">
    @Html.Partial("SearchForm")
</div>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameForSort(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameForSort(model => model.AclId)
        </th>
        <th>
            @Html.DisplayNameForSort(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Permission)
        </th>
        <th>
            @Html.DisplayNameForSort(model => model.TrusteeType)
        </th>
        <th>
            @Html.DisplayNameForSort(model => model.Trustee)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        string detailLink = Url.Action("Details", "Aces", new { id = item.Id });
        <tr>
            <td onclick="window.location = '@detailLink'" class="ap-hand">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td onclick="window.location = '@detailLink'" class="ap-hand">
                @Html.DisplayFor(modelItem => item.AclId)
            </td>
            <td onclick="window.location = '@detailLink'" class="ap-hand">
                @Html.DisplayFor(modelItem => item.TypeStr)
            </td>
            <td onclick="window.location = '@detailLink'" class="ap-hand">
                @if (item.Permission != null)
                {
                    @Html.DisplayFor(modelItem => item.Permission.Name)
                }
            </td>
            <td onclick="window.location = '@detailLink'" class="ap-hand">
                @Html.DisplayFor(modelItem => item.TrusteeTypeStr)
            </td>
            <td onclick="window.location = '@detailLink'" class="ap-hand">
                @Html.DisplayFor(modelItem => item.Trustee, "Trustee", new { ShowLink = false })
            </td>
            <td class="ap-btn text-nowrap">
                <a class="btn btn-primary btn-sm" href="@detailLink"><i class="fa fa-cog"></i> @GeneralResources.DetailsLink</a>
                @Html.SecuredButton("Update", Url.Action("Edit", "Aces", new { id = item.Id }))
                @Html.SecuredButton("Delete", Url.Action("Delete", "Aces", new { id = item.Id }))
            </td>
        </tr>
    }

</table>


