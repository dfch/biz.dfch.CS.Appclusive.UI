@{
    var title = "biz.dfch.CS.Appclusive.UI";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(title, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Core <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Catalogues", "Index", "Catalogues")</li>
                            <li>@Html.ActionLink("Inventory", "Index", "Nodes")</li>
                            <li>@Html.ActionLink("Carts", "Index", "Carts")</li>
                            <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                            <li>@Html.ActionLink("Jobs", "Index", "Jobs")</li>
                            <li>@Html.ActionLink("Approvals", "Index", "Approvals")</li>
                            <li>@Html.ActionLink("Configurations", "Index", "KeyNameValues")</li>
                            <li>@Html.ActionLink("Entity types", "Index", "EntityTypes")</li>
                            <li>@Html.ActionLink("Gate", "Index", "Gates")</li>
                            <li>@Html.ActionLink("Management uris", "Index", "ManagementUris")</li>
                            <li>@Html.ActionLink("Management credentials", "Index", "ManagementCredentials")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Diagnostics <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("AuditTrail", "AuditTrail", "MyView")</li>
                            <li>@Html.ActionLink("Endpoints", "Index", "Endpoints")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
                <p class="nav navbar-text navbar-right">@User.Identity.Name</p>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year d-fens GmbH</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/sitescripts")
    @RenderSection("scripts", required: false)
</body>
</html>
