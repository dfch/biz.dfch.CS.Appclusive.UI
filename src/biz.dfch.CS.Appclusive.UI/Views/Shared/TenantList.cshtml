@model IEnumerable<biz.dfch.CS.Appclusive.UI.Models.Core.Tenant>
@using biz.dfch.CS.Appclusive.UI.App_LocalResources
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExternalId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExternalType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Parent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExternalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExternalType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentId)                
            </td>
            <td class="ap-btn">
                <a class="btn btn-primary btn-sm" href="@Url.Action("Details", "Tenants", new { id = item.Id })"><i class="fa fa-cog"></i> @GeneralResources.DetailsLink</a>
                @if (ViewBag.ShowEditLinks != null && ViewBag.ShowEditLinks)
                {
                    <a class="btn btn-default btn-sm" href="@Url.Action("Edit", "Tenants", new { id = item.Id })"><i class="fa fa-pencil"></i> @GeneralResources.EditLink</a>
                    <a class="btn btn-default btn-sm" href="@Url.Action("Delete", "Tenants", new { id = item.Id })" onclick="return confirm('@GeneralResources.ConfirmDelete')" title="Delete" data-toggle="tooltip"><i class="fa fa-trash-o"></i></a>
                }
            </td>
        </tr>
    }

</table>
