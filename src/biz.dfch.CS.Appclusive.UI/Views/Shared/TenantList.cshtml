@model IEnumerable<biz.dfch.CS.Appclusive.UI.Models.Core.Tenant>
@using biz.dfch.CS.Appclusive.UI.App_LocalResources
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExternalId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExternalType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Parent)
        </th>
        <th></th>
    </tr>

    @foreach (var tenant in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => tenant.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => tenant.ExternalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => tenant.ExternalType)
            </td>
            <td>
                @if (null != tenant.Parent)
                { 
                    @Html.DisplayFor(modelItem => tenant.Parent.Id)
                }
            </td>
            <td class="ap-btn">
                <a class="btn btn-primary btn-sm" href="@Url.Action("ItemDetails", new { id = tenant.Id })"><i class="fa fa-cog"></i> @GeneralResources.DetailsLink</a>
                <a class="btn btn-default btn-sm" href="@Url.Action("ItemEdit", new { id = tenant.Id })"><i class="fa fa-pencil"></i> @GeneralResources.EditLink</a>
            </td>
        </tr>
    }

</table>
