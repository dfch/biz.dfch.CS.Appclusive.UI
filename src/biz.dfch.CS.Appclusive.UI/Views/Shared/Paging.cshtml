        @if (ViewBag.Paging.PageNr > 1)
        {
            int prevPage = ViewBag.Paging.PageNr - 1;
            <li>
                <a href="@Url.Action("Index", new { pageNr = prevPage })"> previous </a>
            </li>
        }
        else
        {
            <li class="disabled">
                <a class="disabled"> previous </a>
            </li>
        }

        @if (ViewBag.Paging.HasMore)
        {
            int nextPage = ViewBag.Paging.PageNr + 1;
            <li>
                <a href="@Url.Action("Index", new { pageNr = nextPage })"> next </a>
            </li>
        }
        else
        {
            <li class="disabled">
                <a class="disabled"> next </a>
            </li>
        }
    </ul>
}