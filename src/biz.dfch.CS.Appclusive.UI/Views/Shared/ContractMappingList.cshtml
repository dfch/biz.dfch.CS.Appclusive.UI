@model IEnumerable<biz.dfch.CS.Appclusive.UI.Models.Core.ContractMapping>
@using biz.dfch.CS.Appclusive.UI.App_LocalResources
@if (ViewBag.catalogId > 0) { 
<p>
    <a class="btn btn-default btn-sm" href="@Url.Action("ItemCreate", new { catalogId = ViewBag.catalogId })"><i class="fa fa-plus "></i> Create New Item</a>
</p>
}
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExternalId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExternalType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPrimary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValidFrom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValidUntil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Parameters)
        </th>
        <th></th>
    </tr>

    @foreach (var contract in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => contract.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => contract.Customer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => contract.ExternalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => contract.ExternalType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => contract.IsPrimary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => contract.ValidFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => contract.ValidUntil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => contract.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => contract.Parameters)
            </td>
            <td class="ap-btn">
                <a class="btn btn-primary btn-sm" href="@Url.Action("ItemDetails", new { id = contract.Id })"><i class="fa fa-cog"></i> @GeneralResources.DetailsLink</a>
                <a class="btn btn-default btn-sm" href="@Url.Action("ItemEdit", new { id = contract.Id })"><i class="fa fa-pencil"></i> @GeneralResources.EditLink</a>
            </td>
        </tr>
    }

</table>
