@model biz.dfch.CS.Appclusive.UI.Models.IAppcusiveEntityBase
<dl>
    <!--class="dl-horizontal"-->

    <dt>
        @Html.DisplayNameFor(model => model.Tid)
    </dt>
    <dd>
        @{
        string id = (string)ViewContext.Controller.ControllerContext.RouteData.Values["id"];
        string action = (string)ViewContext.Controller.ControllerContext.RouteData.Values["action"];
        string controller = (string)ViewContext.Controller.ControllerContext.RouteData.Values["controller"];
        }
        @Html.ActionLink(Model.Tid.ToString(), "Details", "Tenants", new { id = Model.Tid, rId = id, rAction = action, rController = controller }, null)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Id)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Id)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Created)
    </dt>
    <dd>        
        @Html.DisplayFor(model => model.Created)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.CreatedBy)
    </dt>
    <dd>
        @if (null != Model.CreatedBy)
        {
            @Html.DisplayFor(model => model.CreatedBy)
        }
        else
        {
            @Html.DisplayFor(model => model.CreatedById)
        }
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Modified)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Modified)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.ModifiedBy)
    </dt>
    <dd>
        @if (null != Model.ModifiedBy)
        {
            @Html.DisplayFor(model => model.ModifiedBy)
        }
        else
        {
            @Html.DisplayFor(model => model.ModifiedById)
        }
    </dd>

</dl>
