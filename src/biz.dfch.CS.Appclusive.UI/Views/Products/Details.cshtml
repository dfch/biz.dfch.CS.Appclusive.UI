@model biz.dfch.CS.Appclusive.UI.Models.Core.Product
@using biz.dfch.CS.Appclusive.UI.App_LocalResources

@{
    ViewBag.Title = @Model.GetType().Name + " details";
}
@section Title{
    <h2>@Html.DisplayFor(model => model.Name)</h2>
    <h4>@GeneralResources.ResourceManager.GetString(@Model.GetType().Name)</h4>
}
<div>
    <hr />

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#details">@GeneralResources.Details</a></li>
        <li><a data-toggle="tab" href="#general">@GeneralResources.General</a></li>
        <li><a data-toggle="tab" href="#items">@GeneralResources.CatalogueItems</a></li>
    </ul>
    <div class="tab-content">
        <div id="details" class="tab-pane fade in active">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ValidFrom)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ValidFrom)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ValidUntil)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ValidUntil)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.EndOfLife)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.EndOfLife)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.EntityKind)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.EntityKind)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Type)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Type)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Parameters)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Parameters)
                </dd>

            </dl>
        </div>
        <div id="general" class="tab-pane fade">
            @Html.Partial("IAppcusiveEntityBaseDetails", Model)
        </div>
        <div id="general" class="tab-pane fade">
            @Html.Partial("IAppcusiveEntityBaseDetails", Model)
        </div>
        <div id="items" class="tab-pane fade">
            @Html.Partial("CatalogueItemList", Model.CatalogueItems)
        </div>
    </div>
    <hr />
</div>
<p>
    @if (Model.Id > 0)
    {
        <a class="btn btn-default btn-sm" href="@Url.Action("Edit", new { id = Model.Id })"><i class="fa fa-pencil "></i> @GeneralResources.EditLink</a>
    }
    @if (ViewBag.ReturnId > 0 && !string.IsNullOrWhiteSpace(ViewBag.ReturnAction) && !string.IsNullOrWhiteSpace(ViewBag.ReturnController))
    {
        <a class="btn btn-info btn-sm" href="@Url.Action(ViewBag.ReturnAction, ViewBag.ReturnController, new { id= ViewBag.ReturnId })"><i class="fa fa-arrow-left "></i> @GeneralResources.Back</a>
    }
    else
    {
        <a class="btn btn-info btn-sm" href="@Url.Action("Index")"><i class="fa fa-arrow-left "></i> @GeneralResources.Back2list</a>
    }
</p>
