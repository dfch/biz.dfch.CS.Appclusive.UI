@model biz.dfch.CS.Appclusive.UI.Models.Core.CatalogueItem

@{
    ViewBag.Title = "Catalogue Item edit";
}

@section Title{
    <h2>@Html.DisplayFor(model => model.Name)</h2>
    <h4>Catalogue item of catalogue "@Html.DisplayFor(model => model.Catalogue.Name)"</h4>
}

<div>
    <hr />

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#details">Details</a></li>
        <li><a data-toggle="tab" href="#general">General</a></li>
    </ul>
    <div class="tab-content">
        <div id="details" class="tab-pane fade in active">
            @Html.Partial("ItemFormPartial", Model)
        </div>
        <div id="general" class="tab-pane fade">
            @Html.Partial("IAppcusiveEntityBaseDetails", Model)
        </div>
    </div>
    <hr />
</div>
<p>
    @if (Model.Id > 0)
    {
        <a class="btn btn-default btn-sm" href="@Url.Action("ItemEdit", new { id = Model.Id })"><i class="fa fa-pencil "></i> Edit</a>
    }
    @if (Model.CatalogueId > 0)
    {
        <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { Id = Model.CatalogueId })"><i class="fa fa-arrow-left "></i> Back to Catalogue</a>
    }
</p>
