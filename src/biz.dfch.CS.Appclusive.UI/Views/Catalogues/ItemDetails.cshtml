@model biz.dfch.CS.Appclusive.UI.Models.Core.CatalogueItem
@using biz.dfch.CS.Appclusive.UI.App_LocalResources
@{
    ViewBag.Title = @Model.GetType().Name + " details";
}
@section Title{
    <h2>@Html.DisplayFor(model => model.Name)</h2>
    <h4>@GeneralResources.ItemOfCatalog "@Html.DisplayFor(model => model.Catalogue.Name)"</h4>
}
<div>
    <hr />

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#details">@GeneralResources.Details</a></li>
        <li><a data-toggle="tab" href="#general">@GeneralResources.General</a></li>
    </ul>
    <div class="tab-content">
        <div id="details" class="tab-pane fade in active">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Product)
                </dt>
                <dd>
                    @if (Model.Product != null) {
                        @Html.DisplayFor(model => model.Product.Name);
                    }
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ValidFrom)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ValidFrom)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ValidUntil)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ValidUntil)
                </dd>
                
                <dt>
                    @Html.DisplayNameFor(model => model.EndOfLife)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.EndOfLife)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Parameters)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Parameters)
                </dd>

            </dl>
        </div>
        <div id="general" class="tab-pane fade">
            @Html.Partial("IAppcusiveEntityBaseDetails", Model)
        </div>
    </div>
    <hr />
</div>
<p>
    @if (Model.ProductId > 0)
    {
        <a class="btn btn-default btn-sm" href="@Url.Action("Details", "Products", new { Id = Model.ProductId })"><i class=" fa fa-arrow-left "></i> @GeneralResources.GoToProduct</a>
    }
    @if (Model.Id > 0)
    {
        <a class="btn btn-default btn-sm" href="@Url.Action("ItemEdit", new { id = Model.Id })"><i class="fa fa-pencil "></i> @GeneralResources.EditLink</a>
    }
    @if (Model.CatalogueId > 0)
    {
        <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { Id = Model.CatalogueId })"><i class="fa fa-arrow-left "></i> @GeneralResources.BackToCatalogue</a>
    }
</p>
